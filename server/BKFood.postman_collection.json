			"item": [
				{
					"name": "Register User",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"let firstName = pm.variables.replaceIn(\"{{$randomFirstName}}\")",
									"let lastName = pm.variables.replaceIn(\"{{$randomFirstName}}\")",
									"",
									"pm.environment.set(\"username\", `${firstName}${lastName}`)",
									"",
									"pm.environment.set(\"password\", pm.variables.replaceIn('{{$randomPassword}}'))",
									"",
									"pm.environment.set(\"email\", `${firstName.toLowerCase()}.${lastName.toLowerCase()}@example.com`)"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\" : \"{{email}}\",\n    \"username\" : \"{{username}}\",\n    \"password\" : \"{{password}}\",\n    \"confirmPassword\" : \"{{password}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{host}}/api/users/register",
							"host": [
								"{{host}}"
							],
							"path": [
								"api",
								"users",
								"register"
							]
						}
					},
					"response": []
				},
